{
  "name": "@yuki/db",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "type": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "gnr": "bun with-env prisma generate",
    "lint": "eslint",
    "migrate": "bun with-env prisma migrate dev --skip-generate",
    "push": "bun with-env prisma db push",
    "studio": "bun with-env prisma studio -b none",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@yuki/prettier-config",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@prisma/adapter-neon": "^6.6.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "@yuki/eslint-config": "workspace:*",
    "@yuki/prettier-config": "workspace:*",
    "@yuki/tsconfig": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "eslint": "latest",
    "prettier": "latest",
    "prisma": "^6.6.0",
    "typescript": "latest"
  }
}
