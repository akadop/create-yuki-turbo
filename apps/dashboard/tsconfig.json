{
  "extends": "@yuki/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "preserve",
    "types": ["node", "vite/client"],
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": { "@/*": ["./app/*"], "@yuki/ui/*": ["../../packages/ui/src/ui/*"] }
  },
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
